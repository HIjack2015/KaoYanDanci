<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/englishTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            tools:text="sdgafdddddd"/>

        <TextView
            android:id="@+id/chineseTxt"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            />

        <cn.jk.kaoyandanci.util.ShadowImageView
            android:id="@+id/collect_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/blue_star"/>

        <cn.jk.kaoyandanci.util.ShadowImageView
            android:id="@+id/delete_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/ic_delete_blue_24dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>